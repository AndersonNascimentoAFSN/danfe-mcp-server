{
  "name": "mcp-danfe-downloader",
  "version": "1.0.0",
  "description": "MCP Server for automating DANFE XML downloads from meudanfe.com.br",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:headless": "xvfb-run -a --server-args='-screen 0 1920x1080x24' node dist/index.js",
    "start:sse": "node dist/index-http-sse.js",
    "start:sse:headless": "xvfb-run -a --server-args='-screen 0 1920x1080x24' node dist/index-http-sse.js",
    "dev": "tsc && node dist/index.js",
    "dev:headless": "tsc && xvfb-run -a --server-args='-screen 0 1920x1080x24' node dist/index.js",
    "dev:sse": "tsc && node dist/index-http-sse.js",
    "dev:sse:headless": "tsc && xvfb-run -a --server-args='-screen 0 1920x1080x24' node dist/index-http-sse.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "tsc && node dist/test-final-downloader.js",
    "test:download": "npm run build && node dist/test-final-downloader.js"
  },
  "keywords": [
    "mcp",
    "danfe",
    "xml",
    "automation",
    "playwright",
    "model-context-protocol"
  ],
  "author": "Anderson Nascimento",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.21.2",
    "fastify": "^5.6.1",
    "fs-extra": "^11.3.2",
    "path": "^0.12.7",
    "playwright": "^1.48.0",
    "xml2js": "^0.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@types/xml2js": "^0.4.14",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
